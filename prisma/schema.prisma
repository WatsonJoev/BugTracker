generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Issue {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(255)
  description String
  status      Status   @default(OPEN)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  assignedTo  String?  @db.Uuid
  createdBy   String?  @db.Uuid
  tags        Json[]   @default([])
  Owning_Org  String?  @map("Owning Org") @db.Uuid
  org         Org?     @relation("org", fields: [Owning_Org], references: [id], onDelete: NoAction, onUpdate: NoAction)
  Assigned    Profile? @relation("Assigned", fields: [assignedTo], references: [id])
  Owner       Profile? @relation("Owner", fields: [createdBy], references: [id])

  @@map("issue")
}

model Tags {
  id         Int      @id @default(autoincrement())
  tagName    String   @default("")
  createdBy  String?  @db.Uuid
  Owning_Org String?  @db.Uuid
  org        Org?     @relation("orgTag", fields: [Owning_Org], references: [id], onDelete: NoAction, onUpdate: NoAction)
  Owner      Profile? @relation("OwnerTag", fields: [createdBy], references: [id])

  @@map("tags")
}

model Profile {
  id        String  @id @db.Uuid
  role      Role    @default(user)
  email     String  @default("")
  firstname String  @default("")
  orgId     String? @db.Uuid
  lastname  String  @default("")
  Assigned  Issue[] @relation("Assigned")
  Owner     Issue[] @relation("Owner")
  OwnerTag  Tags[]  @relation("OwnerTag")
  Owning    Org[]   @relation("Owning")
  OrgID     Org?    @relation("OrgID", fields: [orgId], references: [id])

  @@map("profile")
}

model Org {
  name      String    @default("")
  strength  String    @default("")
  username  String    @default("")
  org_owner String?   @db.Uuid
  address   String    @default("")
  id        String    @id @default(uuid()) @db.Uuid
  OrgID     Profile[] @relation("OrgID")
  issue     Issue[]   @relation("org")
  tags      Tags[]    @relation("orgTag")
  Owning    Profile?  @relation("Owning", fields: [org_owner], references: [id])

  @@map("org")
}

enum Role {
  admin
  user
}

enum Status {
  OPEN
  IN_PROGRESS
  HOLD
  CLOSE
}
